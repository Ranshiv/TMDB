<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF5722" /> <!-- Pressed color -->
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="#D84315" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FF7043"
                android:endColor="#BF360C"
                android:angle="45" />
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="#FF5722" />
        </shape>
    </item>
</selector>

